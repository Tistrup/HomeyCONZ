{
  "name": {
    "en": "LCD Temperature & Humidity Sensor"
  },
  "class": "sensor",
  "capabilities": [
    "measure_humidity",
    "measure_temperature",
    "measure_battery"
  ],
  "energy": {
    "batteries": [
      "AAA"
    ]
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  },
  "icon": "{{driverAssetsPath}}/icon.svg",
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "repair"
    }
  ],
  "settings":[
    {
      "type": "group",
      "label": {
        "en": "Calibration Settings"
      },
      "children": [
        {
          "id" : "temperature_offset",
          "type": "number",
          "label": {
              "en": "Temperature calibration"
          },
          "value": 0,
          "hint": {
              "en": "If a sensor is not properly calibrated it will read slightly wrong values. Using this setting you can adjust the sensor readings, i.e if you set a value of -2.5 and the sensor reports 20, the sensor will show a value of 17.5 within Homey."
          }
        },
        {
          "id" : "humidity_offset",
          "type": "number",
          "label": {
              "en": "Humidity calibration"
          },
          "value": 0,
          "hint": {
              "en": "If a sensor is not properly calibrated it will read slightly wrong values. Using this setting you can adjust the sensor readings, i.e if you set a value of -2.5 and the sensor reports 20, the sensor will show a value of 17.5 within Homey."
          }
        }
      ]
    },
    {
      "$extends":  "ignore-reachable"
    },
    {
      "$extends":  "info"
    }
  ]
}